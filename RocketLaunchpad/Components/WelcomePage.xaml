<UserControl x:Class="RocketLaunchpad.Components.WelcomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RocketLaunchpad.Components"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="850"
             Background="Transparent">
    <StackPanel VerticalAlignment="Center">
        <TextBlock Width="850px" Height="50px" Foreground="White"
                   FontFamily="pack://application:,,,/Assets/Fonts/#Rubik Regular" FontSize="32px"
                   HorizontalAlignment="Center" TextAlignment="Center"
                   Text="Welcome on Rocket Launchpad !" />
        <TextBlock Width="850px" Height="50px" Foreground="White"
                   FontFamily="pack://application:,,,/Assets/Fonts/#Rubik Regular" FontSize="32px"
                   HorizontalAlignment="Center" TextAlignment="Center"
                   Text="To begin, add an account on the left." x:Name="WelcomeTextIndication" />
    </StackPanel>
</UserControl>