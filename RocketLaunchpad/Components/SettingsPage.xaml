<UserControl x:Class="RocketLaunchpad.Components.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RocketLaunchpad.Components"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="850"
             Background="Transparent">
    <UserControl.Resources>
        <Style x:Key="TextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#Rubik Regular" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#Rubik Regular" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="MaxLines" Value="1" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <Style x:Key="SwitchToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="SwitchBorder"
                                    CornerRadius="13"
                                    Background="#CCCCCC"
                                    BorderThickness="0">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0"
                                                      BlurRadius="4"
                                                      Opacity="0.2" />
                                </Border.Effect>
                            </Border>
                            <Canvas>
                                <Border x:Name="SwitchThumb"
                                        Width="20"
                                        Height="20"
                                        CornerRadius="10"
                                        Background="White"
                                        Canvas.Left="3"
                                        Canvas.Top="3">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="1"
                                                          BlurRadius="3"
                                                          Opacity="0.3" />
                                    </Border.Effect>
                                </Border>
                            </Canvas>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- Animation quand activé -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SwitchBorder" Property="Background" Value="#4CAF50" />
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SwitchThumb"
                                                             Storyboard.TargetProperty="(Canvas.Left)"
                                                             To="27"
                                                             Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SwitchThumb"
                                                             Storyboard.TargetProperty="(Canvas.Left)"
                                                             To="3"
                                                             Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!-- Effet hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="SwitchBorder" Property="Opacity" Value="0.9" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <StackPanel Orientation="Vertical" Margin="20" HorizontalAlignment="Stretch" VerticalAlignment="Top">

        <StackPanel Orientation="Vertical" Margin="0, 0,0, 35" HorizontalAlignment="Left">
            <TextBlock Style="{StaticResource TextStyle}" Text="Game Path:" Margin="0,0,0,10" />
            <Border HorizontalAlignment="Left" Background="#5f5f5f" Padding="10" CornerRadius="15" Margin="0,0,0,10">
                <TextBox x:Name="GamePath" Style="{StaticResource InputStyle}" Foreground="#CECECE" IsReadOnly="True"
                         Text="E:/Games/Game.exe" Width="700" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                         TextAlignment="Left" />
            </Border>
            <Border Cursor="Hand" MouseLeftButtonUp="BrowseLaunchPath_Click" HorizontalAlignment="Left"
                    Background="#5f5f5f"
                    Padding="10" CornerRadius="15">
                <TextBlock Text="Browse game file" Style="{StaticResource TextStyle}" TextAlignment="Center"
                           VerticalAlignment="Center" HorizontalAlignment="Center" />
            </Border>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="0, 0,0, 35" HorizontalAlignment="Left">
            <TextBlock Style="{StaticResource TextStyle}" Text="Launch Arguments:" Margin="0,0,0,10" />
            <Border HorizontalAlignment="Left" Background="#5f5f5f" Padding="10" CornerRadius="15" Margin="0,0,0,10">
                <TextBox x:Name="LaunchArgs" Style="{StaticResource InputStyle}" Text="-language=INT" Width="700"
                         HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Left"
                         LostFocus="UIElement_OnLostFocus" />
            </Border>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0, 0,0, 35" HorizontalAlignment="Left">
            <TextBlock Style="{StaticResource TextStyle}" 
                       Text="Close on launch:" 
                       Margin="0,0,10,0"
                       VerticalAlignment="Center"/>
            <ToggleButton x:Name="CloseLaunchSwitch"
                          Width="50"
                          Height="26"
                          VerticalAlignment="Center"
                          Checked="CloseLaunchSwitch_On"
                          Unchecked="CloseLaunchSwitch_Off"
                          Style="{StaticResource SwitchToggleButtonStyle}" />
        </StackPanel>
        
            <StackPanel Orientation="Vertical" Margin="0, 0, 0, 35" HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Style="{StaticResource TextStyle}"
                               Text="Show stats page:"
                               Margin="0,0,10,0"
                               VerticalAlignment="Center" />
                    <ToggleButton x:Name="ShowStatsSwitch"
                                  Width="50"
                                  Height="26"
                                  VerticalAlignment="Center"
                                  Checked="ShowStatsSwitch_On"
                                  Unchecked="ShowStatsSwitch_Off"
                                  Style="{StaticResource SwitchToggleButtonStyle}" />
                </StackPanel>
                <TextBlock Style="{StaticResource TextStyle}" FontSize="16" Foreground="#888888"
                           Text="Disabling it will launch the game when clicking on an account" Margin="0,5,0, 0" />
            </StackPanel>

        <StackPanel Orientation="Vertical" Margin="0, 0,0, 35" HorizontalAlignment="Left">
            <Border Cursor="Hand" MouseLeftButtonUp="OpenAppDataFolder_Click" HorizontalAlignment="Left"
                    Background="#5f5f5f"
                    Padding="10" CornerRadius="15">
                <TextBlock Text="Open the data folder" Style="{StaticResource TextStyle}" TextAlignment="Center"
                           VerticalAlignment="Center" HorizontalAlignment="Center" />
            </Border>
            <TextBlock Style="{StaticResource TextStyle}" FontSize="16" Foreground="#ff8888"
                       Text="Do NOT share the accounts.json file!" Margin="0,5,0, 0" />
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="0,50,0,0">
            <!--<TextBlock x:Name="VersionDisplay" Style="{StaticResource TextStyle}" Text="Version 0.1.0" />-->
            <TextBlock Style="{StaticResource TextStyle}" Text="A program made by Ghosty with 💖" />
        </StackPanel>

    </StackPanel>
</UserControl>