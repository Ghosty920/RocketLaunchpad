<UserControl x:Class="RocketLaunchpad.Components.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RocketLaunchpad.Components"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="850"
             Background="Transparent">
    <UserControl.Resources>
        <Style x:Key="TextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#Rubik Regular" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#Rubik Regular" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="MaxLines" Value="1" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </UserControl.Resources>

    <StackPanel Orientation="Vertical" Margin="20" HorizontalAlignment="Stretch" VerticalAlignment="Top">

        <StackPanel Orientation="Vertical" Margin="0, 0,0, 35" HorizontalAlignment="Left">
            <TextBlock Style="{StaticResource TextStyle}" Text="Game Path:" Margin="0,0,0,10" />
            <Border HorizontalAlignment="Left" Background="#5f5f5f" Padding="10" CornerRadius="15" Margin="0,0,0,10">
                <TextBox x:Name="GamePath" Style="{StaticResource InputStyle}" Foreground="#CECECE" IsReadOnly="True"
                         Text="E:/Games/Game.exe" Width="700" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                         TextAlignment="Left" />
            </Border>
            <Border Cursor="Hand" MouseLeftButtonUp="BrowseLaunchPath_Click" HorizontalAlignment="Left"
                    Background="#5f5f5f"
                    Padding="10" CornerRadius="15">
                <TextBlock Text="Browse game file" Style="{StaticResource TextStyle}" TextAlignment="Center"
                           VerticalAlignment="Center" HorizontalAlignment="Center" />
            </Border>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="0, 0,0, 35" HorizontalAlignment="Left">
            <TextBlock Style="{StaticResource TextStyle}" Text="Launch Arguments:" Margin="0,0,0,10" />
            <Border HorizontalAlignment="Left" Background="#5f5f5f" Padding="10" CornerRadius="15" Margin="0,0,0,10">
                <TextBox x:Name="LaunchArgs" Style="{StaticResource InputStyle}" Text="-language=INT" Width="700"
                         HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Left" 
                         LostFocus="UIElement_OnLostFocus" />
            </Border>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="0, 0,0, 35" HorizontalAlignment="Left">
            <Border Cursor="Hand" MouseLeftButtonUp="OpenAppDataFolder_Click" HorizontalAlignment="Left"
                    Background="#5f5f5f"
                    Padding="10" CornerRadius="15">
                <TextBlock Text="Open the data folder" Style="{StaticResource TextStyle}" TextAlignment="Center"
                           VerticalAlignment="Center" HorizontalAlignment="Center" />
            </Border>
            <TextBlock Style="{StaticResource TextStyle}" FontSize="16" Foreground="#ff8888"
                       Text="Do NOT share the accounts.json file!" Margin="0,5,0, 0" />
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="0,50,0,0">
            <!--<TextBlock x:Name="VersionDisplay" Style="{StaticResource TextStyle}" Text="Version 0.1.0" />-->
            <TextBlock Style="{StaticResource TextStyle}" Text="A program made by Ghosty with 💖" />
        </StackPanel>

    </StackPanel>
</UserControl>